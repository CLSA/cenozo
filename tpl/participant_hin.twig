{% extends "base_view.twig" %}

{% block javascript %}
  
  {{ parent() }}
  <script type="text/javascript">
    if( null == $.cookie( "hin_warning" ) ) {
      $.cookie( "hin_warning", true, { expires: 1 } );
      alert( "WARNING: Health Insurance Numbers should only be added or edited with the " +
             "participant's explicit consent." );
    }
  </script>

{% endblock javascript %}

{% block post_edit %}
  // reload page after editing the code or region
  if( "hin_code" == column_name || "hin_region_id" == column_name ) slot_refresh( {{ slot }} );
{% endblock post_edit %}

{% block post_record %}

  {{ parent() }}
  {% from 'macros.twig' import confirm_buttons %}
  {{ confirm_buttons( slot, widget.full, '', 'Back', 'right', true ) }}

{% endblock post_record %}
